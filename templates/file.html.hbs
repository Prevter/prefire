<html lang="en">
<head>
    <title>{{name}} - Prefire</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="theme-color" content="#121212"/>
    <meta name="description" content="Simple file sharing service"/>
    <meta charset="utf-8"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="/style.css"/>
    <script src="/index.js" defer></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
          integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
          crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <link rel="icon" href="/img/prefire.svg" type="image/svg+xml">
</head>
<body>
<header class="py-3 px-2">
    <div class="d-flex justify-content-between">
        <div style="width: 2.5rem"></div>
        <div class="text-center d-flex">
            <h1 class="h3 my-auto">
                <a href="/" class="text-decoration-none text-body">
                    <img src="/img/prefire.svg" width="32" class="img-fluid logo" alt="Prefire Logo"/>
                    Prefire
                </a>
            </h1>
        </div>
        <div style="width: 2.5rem">
            <button class="btn btn-circle" onclick="toggleDarkMode()">
                <i class="fas fa-moon"></i>
            </button>
        </div>
    </div>
</header>

<div class="confirm-dialog mx-3">
    <div class="card w-75 w-md-100">
        <div class="card-body">
            {{{preview}}}
            <h1 class="h3 mb-4">{{name}}</h1>

            <p class="input-group">
                <input type="text" class="form-control" id="fileLink" readonly>
                <button class="btn btn-primary" onclick="copyLink()">
                    <i class="fas fa-copy"></i> Copy
                </button>
            </p>

            <script>
                const fileLink = document.getElementById('fileLink');
                fileLink.value = window.location.href;

                function copyLink() {
                    fileLink.select();
                    fileLink.setSelectionRange(0, 99999);
                    document.execCommand('copy');
                }
            </script>

            <p>
                <b><i class="fas fa-file"></i> File Size:</b> {{size}}<br/>
                <b><i class="fas fa-calendar"></i> Uploaded:</b> {{date}}<br/>
                <b><i class="fas fa-file-circle-exclamation"></i> File Type:</b> {{filetype}} <br/>
                <b><i class="fas fa-hashtag"></i> SHA-256:</b> {{filehash}} <br/>
                <b><i class="fas fa-user"></i> Downloads:</b> {{downloads}}
            </p>
            <div class="d-flex justify-content-between">
                <a href="/f/{{id}}/download" class="btn btn-primary" download>
                    <i class="fas fa-download"></i>
                    Download
                </a>
            </div>
        </div>
    </div>
</div>

<footer class="py-3 d-flex justify-content-center">
    <p class="text-center text-muted my-auto">
        Â© 2025 <b>Prefire</b>. All Rights Reserved. <br/>
        <a href="/privacy" class="text-decoration-none text-muted">Privacy Policy</a>
        <span class="mx-1">|</span>
        <a href="/terms" class="text-decoration-none text-muted">Terms of Service</a>
    </p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>